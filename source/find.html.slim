---
title: Find an Apartment - Avesta Homes, LLC
description: This is the Find an Apartment page description
body_classes: find
body_id: find
---

.hero
  img src="http://placehold.it/960x475&text=Google Map" alt=""
  .page-name 
    a id="show-refine-search" href="#" Refine your search

.content.content-bg
  .main.flush role="main"
    .grid
      .grid__col.col-100.large-215
        .find-refine
          h3 Refine your search
          form.refine-search action="#"
            fieldset
              .field
                label for="rent" By Rent
                select name="rent"
                  option value="" $
                  option value="value1" Value 1 
                  option value="value2" Value 2
                  option value="value3" Value 3
              .field.inline
                label for="beds" Beds
                select name="beds"
                  option value="" #
                  option value="value1" 1 
                  option value="value2" 2
                  option value="value3" 3
              .field.inline.float--right
                label for="baths" Baths
                select name="baths"
                  option value="" #
                  option value="value1" 1 
                  option value="value2" 2
                  option value="value3" 3
              .field
                label for="city" City
                select name="city"
                  option value="" Select
                script type='text/template' name='city-options'
                  | <% _.each(cities, function(city){ %>
                  option value="<%= city %>" <%= city %>
                  | <% }) %>
              .field
                label for="state" State
                select name="state"
                  option value="" Select
                  option value="value1" State 1 
                  option value="value2" State 2
                  option value="value3" State 3
              .field
                button class="btn--cancel" Back
                button type="submit" Search
      .grid__col.col-100.large-785#search-results
        script type='text/template' name='search-results'
          .search-results
            h1.beta Apartments in <%= city %>, <%= state %>
            | <% _.each(results, function(result){ %> 
                <%= Avesta._render('search-result',result)%>
              <% }) %>
          .pagination
            | MORE RESULTS
            .pagination__pages
              a.current href="#" 1
              a href="#" 2
              a href="#" 3
              a.next href="#"
        script type='text/template' name='search-result'
          .listing.grid
            .photo.grid__col.col-100.large-50
              img src="<%= weblinks || 'http://placehold.it/342x256&text=No%20Image%20Available' %>" alt="Community Photo"
              a href="<%= url %>" View Community
            .details.grid__col.col-100.large-50
              h2.name
                | <%= name %>
                .marker 4
              p.contact 
                | <%= street %>, <%= city %>, <%= state %><br/><%= phone %>
              p.description <%= propdescription %>
              .specs.grid
                .features.grid__col.col-625
                  ul.list-bullets
                    | <% _.each(features, function(feature) { %>
                    li <%= feature %>
                    | <% }) %>
                .pricing.grid__col.col-375
                  h4 Rent Range
                  p.pricing-data $<%= minRent[0] %> - $<%= maxRent[maxRent.length - 1] %>
                  h4 Bedrooms
                  p.pricing-data <%= numBeds[0] %> - <%= numBeds[numBeds.length - 1] %>
